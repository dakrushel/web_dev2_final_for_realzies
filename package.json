{
    "name": "rolio",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "cd server && nodemon server.js",
        "client": "cd client && next dev",
        "install:all": "npm install --prefix server && npm install --prefix client"
    },
    "devDependencies": {
        "concurrently": "^9.1.0",
        "nodemon": "^3.0.1"
    },
    "dependencies": {
        "body-parser": "^1.20.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "mongoose": "^7.0.4"
    }
}
